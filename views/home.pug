extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block content
    div(class="py-5")
        h1(class="text-center text-4xl font-extrabold") Map's location
        
        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
            h2(class="text-sm uppercase text-gray-800 font-bold") Filter properties:

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categories" class="text-sm w-24 uppercase text-gray-500 font-bold") Categories:
                select(id="categories" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="")
                    each category in categories
                        option(value=category.id)=category.name
            

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="prices" class="text-sm w-24 uppercase text-gray-500 font-bold") Prices:
                select(id="prices" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="")
                    each price in prices
                        option(value=price.id)=price.value
        

        
        
        div(id="home-map" class="h-[600px] mt-5")

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Houses on sale
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each house in houses 
                    div(class="bg-white shadow rounded-lg")
                        img(class="object-cover h-72 w-full" src=`/uploads/${house.images}` alt=`${house.title}'s image`)
                        div(class="p-5 space-y-2")
                            h3(class="text-2xl font-bold")= house.title
                            p(class="text-sm text-gray-600") Rooms: 
                                span(class="text-gray-800 font-bold")= house.rooms
                            p(class="text-sm text-gray-600") Bathrooms: 
                                span(class="text-gray-800 font-bold")= house.bathrooms
                            p(class="text-sm text-gray-600") Price: 
                                span(class="text-gray-800 font-bold")= house.price.value
                            a(href=`/property/${house.id}` class="bg-green-600 w-full text-center block font-bold text-white p-2 uppercase rounded-lg") View property


block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/homeMap.js")