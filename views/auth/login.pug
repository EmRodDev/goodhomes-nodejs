extends ../layout/index

block content
    div(class='py-10')
        h1(class='text-4xl my-10 font-extrabold text-center') Good
            span(class='font-normal') Homes
        h2(class='text-center font-extrabold text-xl')=page

        if errors
            div(class='max-w-md mx-auto my-10')
                each error in errors
                    p(class='bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold')=error.msg

        div(class ='mt-8 mx-auto max-w-md')
            div(class='bg-white py-8 px-4 shadow-xl')
                form(class='space-y-5' method='POST' action='/auth/login')
                    input(type='hidden' name='_csrf' value=csrfToken)
                    div
                        label(class='block text-sm uppercase text-gray-500 mb-2 font-bold' for='email') Email
                        input(id='email' class='w-full px-3 py-2 border border-gray-300 rounded-lg placeholder-gray-400' placeholder='Enter your email here' type='email' name='email')
                    div
                        label(class='block text-sm uppercase text-gray-500 mb-2 font-bold' for='passwd') Password
                        input(id='passwd' class='w-full px-3 py-2 border border-gray-300 rounded-lg placeholder-gray-400' placeholder='Enter your password here' type='password' name='passwd')
                    
                    input(class='button w-full bg-gray-400 hover:bg-gray-600 border border-gray-800 rounded-lg cursor-pointer py-2 text-gray-800 font-bold' type='submit' value='Enter')
            
            div(class='w-full text-center py-2')
                p(class='py-2') Are you new here? 
                    a(href='/auth/register' class='text-blue-700') Sign up

                p(class='py-2') Did you forget your password? 
                    a(href='/auth/forgot-password' class='text-blue-700') Click here