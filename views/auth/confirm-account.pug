extends ../layout/index

block content
    div(class='py-10')
        h1(class='text-4xl my-10 font-extrabold text-center') Good
            span(class='font-normal') Homes
        h2(class='text-center font-extrabold text-xl py-5')=page

        div(class='bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto')
            p(class=error ? 'py-2 px-5 rounded-lg w-full bg-red-300 font-bold text-center' : 'py-2 px-5 rounded-lg w-full bg-green-300 font-bold text-center')=message