extends ../layout/index

block content
    a(class='flex items-baseline  justify-stretch cursor-pointer absolute top-5' href='/auth/login')
        div
            svg(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10")
                path(stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5")
        div(class='align-middle text-center relative bottom-3.5 font-extrabold')
            p Go back

    div(class='py-10')
        h1(class='text-4xl my-10 font-extrabold text-center') Good
            span(class='font-normal') Homes

        h2(class='text-center font-extrabold text-xl')=page
        
        h3(class='text-center py-5') We will send you a link through your email to reset the password of your account, if exists

        div(class ='mt-8 mx-auto max-w-md')
            if errors
                div(class='max-w-md mx-auto my-10')
                    each error in errors
                        p(class='bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold')=error.msg

        if success
            div(class='max-w-md mx-auto my-10')
                p(class='bg-green-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold')=success
        div(class ='mt-8 mx-auto max-w-md')
            div(class='bg-white py-8 px-4 shadow-xl')
                form(class='space-y-5' method='POST' action='/auth/forgot-password')
                    div
                        input(type="hidden" name="_csrf" value=csrfToken)
                        label(class='block text-sm uppercase text-gray-500 mb-2 font-bold' for='email') Email
                        input(id='email' class='w-full px-3 py-2 border border-gray-300 rounded-lg placeholder-gray-400' placeholder='Enter your email here' type='email' name='email')

                    input(class='button w-full bg-gray-400 hover:bg-gray-600 border border-gray-800 rounded-lg cursor-pointer py-2 text-gray-800 font-bold' type='submit' value='Send email')